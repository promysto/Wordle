<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/guessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/guessEditText"
        android:layout_width="309dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter your guess"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guessButton"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/guess1View"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text="Guess 1:"
        android:textSize="26dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guess1ResponseView"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text=""
        android:textSize="26dp"
        android:textAlignment="textEnd"
        android:visibility="invisible"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guess1View"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guess1CheckView"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text="Guess 1 Check:"
        android:textSize="26dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess1View" />

    <TextView
        android:id="@+id/guess1ResultView"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text=""
        android:textSize="26dp"
        android:textAlignment="textEnd"
        android:visibility="invisible"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guess1CheckView"
        app:layout_constraintTop_toBottomOf="@+id/guess1ResponseView" />

    <TextView
        android:id="@+id/guess2View"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text="Guess 2:"
        android:textSize="26dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess1CheckView" />

    <TextView
        android:id="@+id/guess2ResponseView"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text=""
        android:textSize="26dp"
        android:textAlignment="textEnd"
        android:visibility="invisible"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guess2View"
        app:layout_constraintTop_toBottomOf="@+id/guess1ResultView" />

    <TextView
        android:id="@+id/guess2CheckView"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text="Guess 2 Check:"
        android:textSize="26dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess2View" />

    <TextView
        android:id="@+id/guess2ResultView"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text=""
        android:textSize="26dp"
        android:textAlignment="textEnd"
        android:visibility="invisible"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guess2CheckView"
        app:layout_constraintTop_toBottomOf="@+id/guess2ResponseView" />

    <TextView
        android:id="@+id/guess3View"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text="Guess 3:"
        android:textSize="26dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess2CheckView" />

    <TextView
        android:id="@+id/guess3ResponseView"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text=""
        android:textSize="26dp"
        android:textAlignment="textEnd"
        android:visibility="invisible"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guess3View"
        app:layout_constraintTop_toBottomOf="@+id/guess2ResultView" />

    <TextView
        android:id="@+id/guess3CheckView"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text="Guess 3 Check:"
        android:textSize="26dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess3View" />

    <TextView
        android:id="@+id/guess3ResultView"
        android:layout_width="201dp"
        android:layout_height="39dp"
        android:text=""
        android:textSize="26dp"
        android:textAlignment="textEnd"
        android:visibility="invisible"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guess3CheckView"
        app:layout_constraintTop_toBottomOf="@+id/guess3ResponseView" />


    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="190dp"
        android:height="70dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/guessEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Reset"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/victoryView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Congratulations! You got the Word!"
        app:layout_goneMarginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetButton" />

</androidx.constraintlayout.widget.ConstraintLayout>